@page
@model TP_Jueves.Pages.Reservations.DetailsModel
@{
    ViewData["Title"] = "Detalles de Reserva";
}

<!-- HERO SECTION -->
<section class="hero" style="margin-bottom: 2rem;">
    <h1>&#128197; Detalles de Reserva</h1>
    <p>@Model.Reserva?.Restaurante?.Nombre</p>
</section>

@if (Model.Reserva != null)
{
    <div style="max-width: 800px; margin: 0 auto;">
        <!-- ESTADO -->
        <div style="text-align: center; margin-bottom: 2rem;">
            @if (Model.Reserva.Fecha.Date < DateTime.Today)
            {
                <span class="badge bg-secondary" style="font-size: 1.1rem; padding: 0.75rem 1.5rem;">
                    &#10003; Reserva Pasada
                </span>
            }
            else if (Model.Reserva.Fecha.Date == DateTime.Today)
            {
                <span class="badge bg-warning text-dark" style="font-size: 1.1rem; padding: 0.75rem 1.5rem;">
                    &#9888; Hoy
                </span>
            }
            else
            {
                <span class="badge bg-success" style="font-size: 1.1rem; padding: 0.75rem 1.5rem;">
                    &#9989; Confirmada
                </span>
            }
        </div>

        <!-- INFORMACION DEL RESTAURANTE -->
        <div class="card" style="margin-bottom: 2rem; box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
            <div style="background: linear-gradient(135deg, #e74c3c 0%, #ec7063 100%); color: white; padding: 2rem; border-radius: 12px 12px 0 0;">
                <h3 style="margin: 0; font-weight: 700;">@Model.Reserva.Restaurante?.Nombre</h3>
                <p style="margin: 0.5rem 0 0; opacity: 0.9;">&#128205; @Model.Reserva.Restaurante?.Direccion</p>
            </div>

            <div class="card-body">
                <h5 style="color: #2c3e50; margin-bottom: 1rem; font-weight: 600;">Informaci&oacute;n del Restaurante</h5>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
                    <div>
                        <p style="color: #7f8c8d; font-size: 0.9rem; margin: 0.5rem 0;">Tel&eacute;fono</p>
                        <p style="font-weight: 600; margin: 0;">@Model.Reserva.Restaurante?.Telefono</p>
                    </div>
                    <div>
                        <p style="color: #7f8c8d; font-size: 0.9rem; margin: 0.5rem 0;">Email</p>
                        <p style="font-weight: 600; margin: 0;">@Model.Reserva.Restaurante?.Email</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- DATOS DE LA RESERVA -->
        <div class="card" style="margin-bottom: 2rem;">
            <div class="card-body">
                <h5 style="color: #2c3e50; margin-bottom: 1.5rem; font-weight: 600;">Datos de la Reserva</h5>

                <div style="background: #f9f9f9; padding: 1.5rem; border-radius: 8px;">
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 2rem;">
                        <div>
                            <p style="color: #7f8c8d; font-size: 0.9rem; margin: 0.5rem 0;">Fecha</p>
                            <p style="font-weight: 600; margin: 0; font-size: 1.2rem;">
                                @Model.Reserva.Fecha.ToString("dddd, dd/MM/yyyy", System.Globalization.CultureInfo.GetCultureInfo("es-AR"))
                            </p>
                        </div>
                        <div>
                            <p style="color: #7f8c8d; font-size: 0.9rem; margin: 0.5rem 0;">Horario</p>
                            <p style="font-weight: 600; margin: 0; font-size: 1.2rem;">@Model.Reserva.Horario</p>
                        </div>
                    </div>

                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
                        <div>
                            <p style="color: #7f8c8d; font-size: 0.9rem; margin: 0.5rem 0;">Cantidad de Personas</p>
                            <p style="font-weight: 600; margin: 0;">@Model.Reserva.CantPersonas</p>
                        </div>
                        <div>
                            <p style="color: #7f8c8d; font-size: 0.9rem; margin: 0.5rem 0;">Preferencia Diet&eacute;tica</p>
                            <p style="font-weight: 600; margin: 0;">@Model.Reserva.Dieta</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- MESA ASIGNADA -->
        @if (Model.Reserva.Mesa != null)
        {
            <div class="card" style="margin-bottom: 2rem;">
                <div class="card-body">
                    <h5 style="color: #2c3e50; margin-bottom: 1.5rem; font-weight: 600;">Mesa Asignada</h5>

                    <div style="background: linear-gradient(135deg, #3498db 0%, #2980b9 100%); color: white; padding: 2rem; border-radius: 8px; text-align: center;">
                        <p style="margin: 0; font-size: 0.95rem; opacity: 0.9;">Mesa</p>
                        <p style="margin: 0.5rem 0 0; font-size: 2rem; font-weight: 700;">
                            #@Model.Reserva.Mesa.Id
                        </p>
                        <p style="margin: 0.5rem 0 0; opacity: 0.95;">
                            @Model.Reserva.Mesa.Capacidad personas
                        </p>
                    </div>
                </div>
            </div>
        }

        <!-- DATOS PERSONALES -->
        <div class="card" style="margin-bottom: 2rem;">
            <div class="card-body">
                <h5 style="color: #2c3e50; margin-bottom: 1.5rem; font-weight: 600;">Datos Personales</h5>

                <div style="background: #f9f9f9; padding: 1.5rem; border-radius: 8px;">
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
                        <div>
                            <p style="color: #7f8c8d; font-size: 0.9rem; margin: 0.5rem 0;">DNI</p>
                            <p style="font-weight: 600; margin: 0;">@Model.Reserva.DniCliente</p>
                        </div>
                        <div>
                            <p style="color: #7f8c8d; font-size: 0.9rem; margin: 0.5rem 0;">ID de Reserva</p>
                            <p style="font-weight: 600; margin: 0; font-size: 0.9rem;">@Model.Reserva.Id</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ACCIONES -->
        <div style="display: flex; gap: 1rem; margin-bottom: 2rem; flex-wrap: wrap;">
            @if (Model.Reserva.Fecha.Date >= DateTime.Today)
            {
                <a asp-page="Cancel" asp-route-id="@Model.Reserva.Id" class="btn btn-danger btn-lg" style="flex: 1; min-width: 150px;">
                    Cancelar Reserva
                </a>
            }
            else
            {
                <button class="btn btn-danger btn-lg" disabled style="flex: 1; min-width: 150px;">
                    Cancelar (Pasada)
                </button>
            }
            <a asp-page="List" class="btn btn-secondary btn-lg" style="flex: 1; min-width: 150px;">
                Mis Reservas
            </a>
            <a asp-page="/Restaurants/Details" asp-route-id="@Model.Reserva.RestauranteId" class="btn btn-info btn-lg" style="flex: 1; min-width: 150px;">
                Ver Restaurante
            </a>
        </div>
    </div>
}
else
{
    <div style="text-align: center; padding: 3rem;">
        <div style="font-size: 3rem; margin-bottom: 1rem;">&#10067;</div>
        <div class="alert alert-danger" role="alert" style="display: inline-block; border-radius: 12px;">
            <p style="margin: 0; font-size: 1.1rem;">
                No se encontr&oacute; la reserva.
            </p>
        </div>
        <div style="margin-top: 2rem;">
            <a asp-page="List" class="btn btn-secondary btn-lg">Volver a Mis Reservas</a>
        </div>
    </div>
}
