@page
@model TP_Jueves.Pages.Reservations.ListModel
@{
    ViewData["Title"] = "Mis Reservas";
}

<!-- HERO SECTION -->
<section class="hero" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <h1>&#128197; Mis Reservas</h1>
    <p>Gestiona todas tus reservas en un solo lugar</p>
</section>

<!-- SUCCESS MESSAGE -->
@if (!string.IsNullOrEmpty(Model.Message))
{
    <div style="max-width: 1000px; margin: -30px auto 2rem; position: relative; z-index: 10;">
        <div style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white; padding: 1.5rem 2rem; border-radius: 16px; box-shadow: 0 15px 50px rgba(17, 153, 142, 0.3); display: flex; align-items: center; gap: 1rem;">
            <span style="font-size: 2rem;">&#10003;</span>
            <p style="margin: 0; font-weight: 700; font-size: 1.1rem;">@Model.Message</p>
            <button onclick="this.parentElement.remove()" style="background: rgba(255,255,255,0.2); border: none; color: white; width: 32px; height: 32px; border-radius: 50%; cursor: pointer; margin-left: auto; font-weight: 700;">
                &times;
            </button>
        </div>
    </div>
}

<div style="max-width: 1200px; margin: 0 auto; padding: 0 1rem;">
    @if (Model.Reservas.Any())
    {
        <!-- STATS -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; margin-bottom: 3rem;">
            <div style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white; padding: 2rem; border-radius: 16px; box-shadow: 0 10px 30px rgba(17, 153, 142, 0.2);">
                <p style="margin: 0; opacity: 0.9; font-size: 0.9rem; font-weight: 600;">Total Reservas</p>
                <p style="margin: 0.5rem 0 0; font-size: 2.5rem; font-weight: 800;">@Model.Reservas.Count</p>
            </div>

            <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 2rem; border-radius: 16px; box-shadow: 0 10px 30px rgba(102, 126, 234, 0.2);">
                <p style="margin: 0; opacity: 0.9; font-size: 0.9rem; font-weight: 600;">Pr&oacute;ximas</p>
                <p style="margin: 0.5rem 0 0; font-size: 2.5rem; font-weight: 800;">@Model.Reservas.Count(r => r.Fecha.Date >= DateTime.Today)</p>
            </div>

            <div style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white; padding: 2rem; border-radius: 16px; box-shadow: 0 10px 30px rgba(240, 147, 251, 0.2);">
                <p style="margin: 0; opacity: 0.9; font-size: 0.9rem; font-weight: 600;">Hoy</p>
                <p style="margin: 0.5rem 0 0; font-size: 2.5rem; font-weight: 800;">@Model.Reservas.Count(r => r.Fecha.Date == DateTime.Today)</p>
            </div>
        </div>

        <!-- RESERVATIONS LIST -->
        <div style="display: grid; gap: 2rem;">
            @foreach (var reserva in Model.Reservas)
            {
                var isToday = reserva.Fecha.Date == DateTime.Today;
                var isPast = reserva.Fecha.Date < DateTime.Today;
                var borderColor = isPast ? "#95a5a6" : isToday ? "#f39c12" : "#11998e";
                var statusBg = isPast ? "linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%)" : 
                              isToday ? "linear-gradient(135deg, #f39c12 0%, #e67e22 100%)" : 
                              "linear-gradient(135deg, #11998e 0%, #38ef7d 100%)";

                <div class="card" style="border-radius: 20px; border-left: 6px solid @borderColor; overflow: hidden; cursor: pointer; transition: all 0.4s; box-shadow: 0 10px 30px rgba(0,0,0,0.1);" onclick="window.location.href='@Url.Page("Details", new { id = reserva.Id })'"
                     onmouseover="this.style.transform='translateX(8px)'; this.style.boxShadow='0 15px 50px rgba(0,0,0,0.15)';"
                     onmouseout="this.style.transform='translateX(0)'; this.style.boxShadow='0 10px 30px rgba(0,0,0,0.1)';">
                    
                    <div class="card-body" style="padding: 2rem;">
                        <!-- HEADER -->
                        <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1.5rem; flex-wrap: wrap; gap: 1rem;">
                            <div style="flex: 1;">
                                <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.75rem;">
                                    <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); width: 50px; height: 50px; border-radius: 12px; display: flex; align-items: center; justify-content: center; font-size: 1.5rem;">
                                        &#127860;
                                    </div>
                                    <div>
                                        <h5 style="margin: 0; color: #2c3e50; font-weight: 800; font-size: 1.5rem;">
                                            @(reserva.Restaurante?.Nombre ?? "Restaurante")
                                        </h5>
                                        <p style="margin: 0.25rem 0 0; color: #636e72; fontSize: 0.95rem;">
                                            &#128205; @(reserva.Restaurante?.Direccion ?? "")
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- STATUS BADGE -->
                            <div>
                                @if (isPast)
                                {
                                    <span style="background: @statusBg; color: white; padding: 0.6rem 1.5rem; border-radius: 10px; font-weight: 700; font-size: 0.9rem; white-space: nowrap;">
                                        &#10003; Completada
                                    </span>
                                }
                                else if (isToday)
                                {
                                    <span style="background: @statusBg; color: white; padding: 0.6rem 1.5rem; border-radius: 10px; font-weight: 700; font-size: 0.9rem; white-space: nowrap; animation: pulse 2s infinite;">
                                        &#9888; Hoy
                                    </span>
                                }
                                else
                                {
                                    <span style="background: @statusBg; color: white; padding: 0.6rem 1.5rem; border-radius: 10px; font-weight: 700; font-size: 0.9rem; white-space: nowrap;">
                                        &#9989; Confirmada
                                    </span>
                                }
                            </div>
                        </div>

                        <!-- DETAILS -->
                        <div style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); padding: 1.5rem; border-radius: 12px; margin-bottom: 1.5rem;">
                            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1.5rem;">
                                <div>
                                    <p style="margin: 0; color: #95a5a6; font-size: 0.85rem; font-weight: 600; text-transform: uppercase;">Fecha</p>
                                    <p style="margin: 0.25rem 0 0; color: #2c3e50; font-weight: 700; font-size: 1.2rem;">
                                        @reserva.Fecha.ToString("dd/MM/yyyy")
                                    </p>
                                </div>
                                <div>
                                    <p style="margin: 0; color: #95a5a6; font-size: 0.85rem; font-weight: 600; text-transform: uppercase;">Horario</p>
                                    <p style="margin: 0.25rem 0 0; color: #2c3e50; font-weight: 700; font-size: 1.2rem;">
                                        @reserva.Horario
                                    </p>
                                </div>
                                <div>
                                    <p style="margin: 0; color: #95a5a6; font-size: 0.85rem; font-weight: 600; text-transform: uppercase;">Comensales</p>
                                    <p style="margin: 0.25rem 0 0; color: #2c3e50; font-weight: 700; font-size: 1.2rem;">
                                        @reserva.CantPersonas personas
                                    </p>
                                </div>
                                <div>
                                    <p style="margin: 0; color: #95a5a6; font-size: 0.85rem; font-weight: 600; text-transform: uppercase;">Preferencia</p>
                                    <p style="margin: 0.25rem 0 0; color: #2c3e50; font-weight: 700; font-size: 1.2rem;">
                                        @reserva.Dieta
                                    </p>
                                </div>
                            </div>

                            @if (reserva.Mesa != null)
                            {
                                <div style="margin-top: 1.5rem; padding-top: 1.5rem; border-top: 2px dashed #dee2e6;">
                                    <p style="margin: 0; color: #95a5a6; font-size: 0.85rem; font-weight: 600; text-transform: uppercase;">Mesa Asignada</p>
                                    <p style="margin: 0.25rem 0 0; color: #2c3e50; font-weight: 700; font-size: 1.2rem;">
                                        Mesa #@reserva.Mesa.Id (@reserva.Mesa.Capacidad personas)
                                    </p>
                                </div>
                            }
                        </div>

                        <!-- ACTIONS -->
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                            <a asp-page="Details" asp-route-id="@reserva.Id" onclick="event.stopPropagation();" style="background: linear-gradient(135deg, #3498db 0%, #2980b9 100%); color: white; padding: 1rem; border-radius: 10px; text-align: center; text-decoration: none; font-weight: 700; transition: all 0.3s;">
                                &#128065; Ver Detalles
                            </a>
                            
                            @if (!isPast)
                            {
                                <a asp-page="Cancel" asp-route-id="@reserva.Id" onclick="event.stopPropagation();" style="background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%); color: white; padding: 1rem; border-radius: 10px; text-align: center; text-decoration: none; font-weight: 700; transition: all 0.3s;">
                                    &#10005; Cancelar
                                </a>
                            }
                            else
                            {
                                <button disabled style="background: #95a5a6; color: white; padding: 1rem; border-radius: 10px; border: none; font-weight: 700; cursor: not-allowed;">
                                    Completada
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- EMPTY STATE -->
        <div style="max-width: 700px; margin: 3rem auto;">
            <div style="background: white; padding: 4rem 2rem; border-radius: 20px; text-align: center; box-shadow: 0 15px 50px rgba(0,0,0,0.1);">
                <div style="font-size: 5rem; margin-bottom: 1.5rem;">&#128197;</div>
                <h3 style="color: #2c3e50; font-weight: 800; font-size: 1.8rem; margin-bottom: 1rem;">
                    No tienes reservas a&uacute;n
                </h3>
                <p style="color: #636e72; font-size: 1.1rem; margin-bottom: 2rem;">
                    &iexcl;Es hora de explorar y descubrir restaurantes incre&iacute;bles!
                </p>
                <a asp-page="/Restaurants/Browse" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 1.2rem 2.5rem; border-radius: 12px; text-decoration: none; font-weight: 800; font-size: 1.1rem; display: inline-block; transition: all 0.3s;">
                    &#128269; Explorar Restaurantes
                </a>
            </div>
        </div>
    }

    <!-- BOTTOM ACTIONS -->
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; margin: 3rem 0; max-width: 600px; margin-left: auto; margin-right: auto;">
        <a asp-page="/Index" style="background: white; color: #2c3e50; padding: 1.2rem; border-radius: 12px; text-align: center; text-decoration: none; font-weight: 700; box-shadow: 0 5px 20px rgba(0,0,0,0.1); transition: all 0.3s;">
            &#127968; Inicio
        </a>
        <a asp-page="/Restaurants/Browse" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white; padding: 1.2rem; border-radius: 12px; text-align: center; text-decoration: none; font-weight: 700; transition: all 0.3s;">
            Buscar +
        </a>
    </div>
</div>

<style>
    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            box-shadow: 0 0 0 0 rgba(243, 156, 18, 0.7);
        }
        50% {
            transform: scale(1.05);
            box-shadow: 0 0 0 10px rgba(243, 156, 18, 0);
        }
    }
</style>
