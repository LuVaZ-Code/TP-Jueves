@page
@model TP_Jueves.Pages.Restaurants.DashboardModel
@{
    ViewData["Title"] = $"Dashboard - {Model.Restaurante?.Nombre}";
    var estadoColor = Model.Restaurante?.Estado switch
    {
        TP_Jueves.Models.EstadoRestaurante.Activo => "#10B981",
        TP_Jueves.Models.EstadoRestaurante.Pausado => "#F59E0B",
        TP_Jueves.Models.EstadoRestaurante.EnConfiguracion => "#3B82F6",
        _ => "#6B7280"
    };
}

<!-- AIRBNB DASHBOARD -->
<div class="dashboard-page">
    
    <!-- HEADER -->
    <div class="dashboard-header-modern">
        <div class="header-content">
            <div class="header-main">
                <a asp-page="Index" class="back-link-dashboard">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                    Mis restaurantes
                </a>
                <h1 class="restaurant-title-dashboard">@Model.Restaurante?.Nombre</h1>
                <div class="restaurant-meta">
                    <span class="location-info">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                            <circle cx="12" cy="10" r="3"></circle>
                        </svg>
                        @Model.Restaurante?.Direccion
                    </span>
                    <span class="status-badge-dashboard" style="background: @estadoColor;">
                        <span class="status-dot"></span>
                        @Model.Restaurante?.Estado
                    </span>
                </div>
            </div>
            
            <div class="header-actions">
                @if (Model.Restaurante?.Estado == TP_Jueves.Models.EstadoRestaurante.Activo)
                {
                    <form method="post" asp-page-handler="CambiarEstado" asp-route-id="@Model.Id" asp-route-nuevoEstado="@((int)TP_Jueves.Models.EstadoRestaurante.Pausado)">
                        <button type="submit" class="btn-status-toggle pause">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="6" y="4" width="4" height="16"></rect>
                                <rect x="14" y="4" width="4" height="16"></rect>
                            </svg>
                            Pausar reservas
                        </button>
                    </form>
                }
                else if (Model.Restaurante?.Estado == TP_Jueves.Models.EstadoRestaurante.Pausado)
                {
                    <form method="post" asp-page-handler="CambiarEstado" asp-route-id="@Model.Id" asp-route-nuevoEstado="@((int)TP_Jueves.Models.EstadoRestaurante.Activo)">
                        <button type="submit" class="btn-status-toggle activate">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polygon points="5 3 19 12 5 21 5 3"></polygon>
                            </svg>
                            Reactivar
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>

    <div class="dashboard-container">
        
        <!-- STATS GRID -->
        <div class="stats-grid-modern">
            @if (Model.Stats.TotalMesas > 0)
            {
                <div class="stat-card-modern purple">
                    <div class="stat-icon-modern">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="8" width="18" height="12" rx="2"></rect>
                            <path d="M3 8V6a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v2"></path>
                        </svg>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">@Model.Stats.TotalMesas</div>
                        <div class="stat-label">Mesas totales</div>
                    </div>
                </div>
            }

            <div class="stat-card-modern pink">
                <div class="stat-icon-modern">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-value">
                        @if (Model.Stats.ReservasHoy > 0)
                        {
                            @Model.Stats.ReservasHoy
                        }
                        else
                        {
                            <span class="stat-value-small">0</span>
                        }
                    </div>
                    <div class="stat-label">Reservas hoy</div>
                </div>
            </div>

            @if (Model.Stats.PersonasHoy > 0)
            {
                <div class="stat-card-modern blue">
                    <div class="stat-icon-modern">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">@Model.Stats.PersonasHoy</div>
                        <div class="stat-label">Comensales hoy</div>
                    </div>
                </div>
            }

            @if (Model.Stats.TasaOcupacionHoy > 0)
            {
                <div class="stat-card-modern green">
                    <div class="stat-icon-modern">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
                        </svg>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">@Model.Stats.TasaOcupacionHoy<span class="stat-unit">%</span></div>
                        <div class="stat-label">Ocupaci√≥n hoy</div>
                    </div>
                </div>
            }

            @if (Model.Stats.TotalReservasActivas > 0)
            {
                <div class="stat-card-modern orange">
                    <div class="stat-icon-modern">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">@Model.Stats.TotalReservasActivas</div>
                        <div class="stat-label">Reservas activas</div>
                    </div>
                </div>
            }
        </div>

        <!-- MAIN CONTENT -->
        <div class="dashboard-main-grid">
            
            <!-- RESERVAS HOY -->
            <div class="dashboard-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        Reservas de hoy
                    </h2>
                    @if (Model.ReservasHoy.Any())
                    {
                        <span class="count-badge">@Model.ReservasHoy.Count</span>
                    }
                </div>

                <div class="section-content">
                    @if (Model.ReservasHoy.Any())
                    {
                        <div class="reservas-list">
                            @foreach (var reserva in Model.ReservasHoy)
                            {
                                var horaDisplay = !string.IsNullOrEmpty(reserva.HoraReserva) 
                                    ? reserva.HoraReserva 
                                    : reserva.Horario.ToString();
                                
                                <div class="reserva-card-modern">
                                    <div class="reserva-header">
                                        <div class="customer-info">
                                            <div class="customer-avatar">
                                                @(reserva.Cliente?.Nombre?.Substring(0, 1).ToUpper() ?? "C")
                                            </div>
                                            <div>
                                                <div class="customer-name">
                                                    @(reserva.Cliente?.Nombre ?? "Cliente") @(reserva.Cliente?.Apellido ?? "")
                                                </div>
                                                <div class="customer-detail">DNI: @reserva.DniCliente</div>
                                            </div>
                                        </div>
                                        <div class="time-badge">@horaDisplay</div>
                                    </div>
                                    <div class="reserva-details">
                                        <div class="detail-chip">
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                                <circle cx="9" cy="7" r="4"></circle>
                                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                            </svg>
                                            @reserva.CantPersonas personas
                                        </div>
                                        <div class="detail-chip">
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M18 8h1a4 4 0 0 1 0 8h-1"></path>
                                                <path d="M2 8h16v9a4 4 0 0 1-4 4H6a4 4 0 0 1-4-4V8z"></path>
                                                <line x1="6" y1="1" x2="6" y2="4"></line>
                                                <line x1="10" y1="1" x2="10" y2="4"></line>
                                                <line x1="14" y1="1" x2="14" y2="4"></line>
                                            </svg>
                                            @reserva.Dieta
                                        </div>
                                        <div class="detail-chip">
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <rect x="3" y="8" width="18" height="12" rx="2"></rect>
                                                <path d="M3 8V6a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v2"></path>
                                            </svg>
                                            Mesa #@(reserva.MesaId ?? 0)
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state-small">
                            <div class="empty-icon-small">üì≠</div>
                            <p class="empty-text-small">No hay reservas para hoy</p>
                        </div>
                    }
                </div>
            </div>

            <!-- PROXIMAS RESERVAS -->
            <div class="dashboard-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                        Pr√≥ximas reservas
                    </h2>
                    @if (Model.ReservasProximas.Any())
                    {
                        <span class="count-badge">@Model.ReservasProximas.Count</span>
                    }
                </div>

                <div class="section-content">
                    @if (Model.ReservasProximas.Any())
                    {
                        <div class="reservas-list">
                            @foreach (var reserva in Model.ReservasProximas)
                            {
                                var horaDisplay = !string.IsNullOrEmpty(reserva.HoraReserva) 
                                    ? reserva.HoraReserva 
                                    : reserva.Horario.ToString();
                                
                                <div class="reserva-card-modern upcoming">
                                    <div class="reserva-header">
                                        <div class="date-info">
                                            <div class="date-badge">
                                                <div class="date-day">@reserva.Fecha.Day</div>
                                                <div class="date-month">@reserva.Fecha.ToString("MMM")</div>
                                            </div>
                                            <div>
                                                <div class="customer-name">
                                                    @(reserva.Cliente?.Nombre ?? "Cliente") @(reserva.Cliente?.Apellido ?? "")
                                                </div>
                                                <div class="customer-detail">@reserva.CantPersonas personas ‚Ä¢ @horaDisplay</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state-small">
                            <div class="empty-icon-small">üìÖ</div>
                            <p class="empty-text-small">No hay reservas pr√≥ximas</p>
                        </div>
                    }
                </div>
            </div>

        </div>

        <!-- QUICK ACTIONS SIDEBAR -->
        <div class="quick-actions-sidebar">
            <h3 class="sidebar-title">Acciones r√°pidas</h3>
            
            <div class="quick-actions-list">
                <a asp-page="Edit" asp-route-id="@Model.Id" class="quick-action-card">
                    <div class="action-icon edit">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                        </svg>
                    </div>
                    <div class="action-content">
                        <div class="action-title">Editar informaci√≥n</div>
                        <div class="action-description">Actualizar datos del restaurante</div>
                    </div>
                </a>

                <a asp-page="Mesas/Index" asp-route-restauranteId="@Model.Id" class="quick-action-card">
                    <div class="action-icon tables">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="8" width="18" height="12" rx="2"></rect>
                            <path d="M3 8V6a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v2"></path>
                        </svg>
                    </div>
                    <div class="action-content">
                        <div class="action-title">Gestionar mesas</div>
                        <div class="action-description">
                            @if (Model.Stats.TotalMesas > 0)
                            {
                                <text>@Model.Stats.TotalMesas mesa(s) configurada(s)</text>
                            }
                            else
                            {
                                <text>Configurar mesas</text>
                            }
                        </div>
                    </div>
                </a>

                <a asp-page="Turnos/Index" asp-route-restauranteId="@Model.Id" class="quick-action-card">
                    <div class="action-icon schedule">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                    </div>
                    <div class="action-content">
                        <div class="action-title">Gestionar horarios</div>
                        <div class="action-description">Configurar disponibilidad</div>
                    </div>
                </a>

                <a asp-page="/Restaurants/Details" asp-route-id="@Model.Id" class="quick-action-card" target="_blank">
                    <div class="action-icon view">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                    </div>
                    <div class="action-content">
                        <div class="action-title">Vista de cliente</div>
                        <div class="action-description">Ver c√≥mo ven los clientes</div>
                    </div>
                </a>

                <a asp-page="Index" class="quick-action-card featured">
                    <div class="action-icon home">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                            <polyline points="9 22 9 12 15 12 15 22"></polyline>
                        </svg>
                    </div>
                    <div class="action-content">
                        <div class="action-title">Mis restaurantes</div>
                        <div class="action-description">Ver todos mis restaurantes</div>
                    </div>
                </a>
            </div>
        </div>

    </div>
</div>

<style>
/* AIRBNB DASHBOARD STYLES */
.dashboard-page {
    background: #F7F7F7;
    min-height: 100vh;
    padding-bottom: 60px;
}

.dashboard-header-modern {
    background: linear-gradient(135deg, var(--airbnb-red) 0%, var(--airbnb-red-dark) 100%);
    color: white;
    padding: 40px 24px 60px;
    margin-bottom: -40px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.header-content {
    max-width: 1280px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 24px;
}

.back-link-dashboard {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: rgba(255, 255, 255, 0.9);
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    margin-bottom: 16px;
    transition: var(--transition);
}

.back-link-dashboard:hover {
    color: white;
}

.back-link-dashboard svg {
    width: 16px;
    height: 16px;
}

.restaurant-title-dashboard {
    font-size: 36px;
    font-weight: 700;
    margin: 0 0 12px;
    letter-spacing: -0.5px;
}

.restaurant-meta {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-wrap: wrap;
}

.location-info {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 15px;
    opacity: 0.95;
}

.location-info svg {
    width: 18px;
    height: 18px;
}

.status-badge-dashboard {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 6px 16px;
    border-radius: 20px;
    font-weight: 600;
    font-size: 13px;
    color: white;
}

.status-dot {
    width: 8px;
    height: 8px;
    background: white;
    border-radius: 50%;
    animation: pulse-dot 2s infinite;
}

@@keyframes pulse-dot {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}

.btn-status-toggle {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    border: 2px solid white;
    border-radius: 8px;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    transition: var(--transition);
    white-space: nowrap;
}

.btn-status-toggle:hover {
    background: white;
    color: var(--airbnb-red);
}

.btn-status-toggle svg {
    width: 18px;
    height: 18px;
}

.dashboard-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 24px;
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: 24px;
}

.stats-grid-modern {
    grid-column: 1 / -1;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 32px;
}

.stat-card-modern {
    background: white;
    padding: 24px;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    display: flex;
    align-items: flex-start;
    gap: 16px;
    transition: var(--transition);
}

.stat-card-modern:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
}

.stat-icon-modern {
    width: 48px;
    height: 48px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.stat-card-modern.purple .stat-icon-modern {
    background: linear-gradient(135deg, #8B5CF6 0%, #6D28D9 100%);
}

.stat-card-modern.pink .stat-icon-modern {
    background: linear-gradient(135deg, #EC4899 0%, #DB2777 100%);
}

.stat-card-modern.blue .stat-icon-modern {
    background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
}

.stat-card-modern.green .stat-icon-modern {
    background: linear-gradient(135deg, #10B981 0%, #059669 100%);
}

.stat-card-modern.orange .stat-icon-modern {
    background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
}

.stat-icon-modern svg {
    width: 24px;
    height: 24px;
    stroke: white;
}

.stat-value {
    font-size: 32px;
    font-weight: 700;
    color: var(--airbnb-black);
    line-height: 1;
    margin-bottom: 4px;
}

.stat-value-small {
    font-size: 24px;
    color: var(--airbnb-gray);
}

.stat-unit {
    font-size: 18px;
    color: var(--airbnb-gray);
}

.stat-label {
    font-size: 13px;
    color: var(--airbnb-gray);
    text-transform: capitalize;
}

.dashboard-main-grid {
    display: flex;
    flex-direction: column;
    gap: 24px;
}

.dashboard-section {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    overflow: hidden;
}

.section-header {
    padding: 24px;
    border-bottom: 1px solid var(--airbnb-light-gray);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.section-title {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 18px;
    font-weight: 600;
    color: var(--airbnb-black);
    margin: 0;
}

.section-title svg {
    width: 20px;
    height: 20px;
}

.count-badge {
    background: var(--airbnb-lighter-gray);
    color: var(--airbnb-black);
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 13px;
    font-weight: 600;
}

.section-content {
    padding: 24px;
}

.reservas-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
    max-height: 500px;
    overflow-y: auto;
}

.reserva-card-modern {
    border: 1px solid var(--airbnb-light-gray);
    border-left: 4px solid var(--airbnb-red);
    border-radius: 8px;
    padding: 16px;
    transition: var(--transition);
}

.reserva-card-modern:hover {
    border-left-color: var(--airbnb-red-dark);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.reserva-card-modern.upcoming {
    border-left-color: #3B82F6;
}

.reserva-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 12px;
}

.customer-info,
.date-info {
    display: flex;
    align-items: center;
    gap: 12px;
}

.customer-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--airbnb-red);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 16px;
}

.date-badge {
    width: 50px;
    height: 50px;
    border-radius: 8px;
    background: #3B82F6;
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.date-day {
    font-size: 18px;
    font-weight: 700;
    line-height: 1;
