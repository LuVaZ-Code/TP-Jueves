@page
@model TP_Jueves.Pages.Restaurants.CreateModel
@{
    ViewData["Title"] = "Crear Restaurante";
}

<!-- HERO SECTION -->
<section class="hero" style="margin-bottom: 2rem;">
    <h1>Crear Nuevo Restaurante</h1>
    <p>Completa los datos basicos de tu restaurante</p>
</section>

<div class="reserve-form" style="max-width: 700px;">
    <form method="post" novalidate>
        <!-- NOMBRE -->
        <div class="form-group">
            <label asp-for="Restaurante.Nombre" class="form-label">
                <i class="fas fa-utensils"></i> Nombre del Restaurante
            </label>
            <input asp-for="Restaurante.Nombre" class="form-control" placeholder="Ej: La Trattoria" />
            <span asp-validation-for="Restaurante.Nombre" class="text-danger"></span>
        </div>

        <!-- DESCRIPCION -->
        <div class="form-group">
            <label asp-for="Restaurante.Descripcion" class="form-label">
                <i class="fas fa-align-left"></i> Descripcion
            </label>
            <textarea asp-for="Restaurante.Descripcion" class="form-control" rows="3" placeholder="Describe tu restaurante..."></textarea>
            <span asp-validation-for="Restaurante.Descripcion" class="text-danger"></span>
        </div>

        <!-- FILA 1: DIRECCION Y TELEFONO -->
        <div class="form-row">
            <div class="form-group">
                <label asp-for="Restaurante.Direccion" class="form-label">
                    <i class="fas fa-map-marker-alt"></i> Direccion
                </label>
                <input asp-for="Restaurante.Direccion" class="form-control" placeholder="Calle y numero" />
                <span asp-validation-for="Restaurante.Direccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Restaurante.Telefono" class="form-label">
                    <i class="fas fa-phone"></i> Telefono
                </label>
                <input asp-for="Restaurante.Telefono" class="form-control" placeholder="1234567890" />
                <span asp-validation-for="Restaurante.Telefono" class="text-danger"></span>
            </div>
        </div>

        <!-- EMAIL -->
        <div class="form-group">
            <label asp-for="Restaurante.Email" class="form-label">
                <i class="fas fa-envelope"></i> Email
            </label>
            <input asp-for="Restaurante.Email" type="email" class="form-control" placeholder="contacto@restaurante.com" />
            <span asp-validation-for="Restaurante.Email" class="text-danger"></span>
        </div>

        <!-- BOTONES -->
        <div style="display: flex; gap: 1rem; margin-top: 2rem;">
            <button type="submit" class="btn btn-primary btn-lg" style="flex: 1;">
                <i class="fas fa-save"></i> Crear Restaurante
            </button>
            <a asp-page="Index" class="btn btn-secondary btn-lg" style="flex: 1;">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
