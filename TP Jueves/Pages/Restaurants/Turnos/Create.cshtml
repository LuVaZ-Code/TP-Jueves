@page
@model TP_Jueves.Pages.Restaurants.Turnos.CreateModel
@{
    ViewData["Title"] = "Agregar Horario";
}

<!-- HERO SECTION -->
<section class="hero" style="margin-bottom: 2rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <h1>&#10133; Agregar Horario</h1>
    <p>@Model.Restaurante?.Nombre</p>
</section>

<div style="max-width: 600px; margin: 0 auto;">
    <div class="card" style="border: none; border-radius: 16px; box-shadow: 0 10px 30px rgba(0,0,0,0.1);">
        <div class="card-body" style="padding: 2.5rem;">
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey(string.Empty))
            {
                <div style="background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%); color: white; padding: 1.5rem; border-radius: 12px; margin-bottom: 1.5rem;">
                    <div style="display: flex; align-items: start; gap: 1rem;">
                        <div style="font-size: 1.5rem;">&#9888;</div>
                        <div style="flex: 1;">
                            @foreach (var error in ViewData.ModelState[string.Empty].Errors)
                            {
                                <p style="margin: 0.25rem 0; font-size: 0.95rem;">@error.ErrorMessage</p>
                            }
                        </div>
                    </div>
                </div>
            }

            <form method="post" novalidate>
                <input type="hidden" asp-for="RestauranteId" />

                <!-- HORA -->
                <div class="form-group" style="margin-bottom: 1.5rem;">
                    <label asp-for="Input.Hora" class="form-label" style="font-weight: 700; color: #2c3e50; margin-bottom: 0.5rem;">
                        &#9200; Hora
                    </label>
                    <input asp-for="Input.Hora" type="time" class="form-control" 
                           style="border-radius: 10px; border: 2px solid #e0e0e0; padding: 1rem; font-size: 1rem;" />
                    <span asp-validation-for="Input.Hora" class="text-danger"></span>
                    <small class="form-text" style="color: #7f8c8d; font-size: 0.85rem;">
                        Formato 24 horas (ej: 12:00, 20:30)
                    </small>
                </div>

                <!-- DESCRIPCION -->
                <div class="form-group" style="margin-bottom: 1.5rem;">
                    <label asp-for="Input.Descripcion" class="form-label" style="font-weight: 700; color: #2c3e50; margin-bottom: 0.5rem;">
                        &#128221; Descripci&oacute;n (opcional)
                    </label>
                    <input asp-for="Input.Descripcion" type="text" class="form-control" 
                           placeholder="Ej: Almuerzo, Cena, Merienda"
                           style="border-radius: 10px; border: 2px solid #e0e0e0; padding: 1rem; font-size: 1rem;" />
                    <span asp-validation-for="Input.Descripcion" class="text-danger"></span>
                </div>

                <div style="background: #e3f2fd; padding: 1rem; border-radius: 8px; margin-bottom: 2rem;">
                    <p style="margin: 0; color: #1565c0; font-size: 0.9rem;">
                        <strong>&#8505; Informaci&oacute;n:</strong> La disponibilidad se calcular&aacute; autom&aacute;ticamente seg&uacute;n las mesas f&iacute;sicas del restaurante.
                    </p>
                </div>

                <!-- EJEMPLOS SUGERIDOS -->
                <div style="background: #f8f9fa; padding: 1.5rem; border-radius: 12px; margin-bottom: 2rem;">
                    <h5 style="color: #2c3e50; margin-bottom: 1rem; font-weight: 700;">&#128161; Horarios sugeridos:</h5>
                    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 0.5rem;">
                        <button type="button" onclick="setHora('12:00')" 
                                style="background: white; border: 2px solid #e0e0e0; padding: 0.75rem; border-radius: 8px; cursor: pointer; transition: all 0.3s;">
                            12:00
                        </button>
                        <button type="button" onclick="setHora('12:30')" 
                                style="background: white; border: 2px solid #e0e0e0; padding: 0.75rem; border-radius: 8px; cursor: pointer; transition: all 0.3s;">
                            12:30
                        </button>
                        <button type="button" onclick="setHora('13:00')" 
                                style="background: white; border: 2px solid #e0e0e0; padding: 0.75rem; border-radius: 8px; cursor: pointer; transition: all 0.3s;">
                            13:00
                        </button>
                        <button type="button" onclick="setHora('13:30')" 
                                style="background: white; border: 2px solid #e0e0e0; padding: 0.75rem; border-radius: 8px; cursor: pointer; transition: all 0.3s;">
                            13:30
                        </button>
                        <button type="button" onclick="setHora('20:00')" 
                                style="background: white; border: 2px solid #e0e0e0; padding: 0.75rem; border-radius: 8px; cursor: pointer; transition: all 0.3s;">
                            20:00
                        </button>
                        <button type="button" onclick="setHora('20:30')" 
                                style="background: white; border: 2px solid #e0e0e0; padding: 0.75rem; border-radius: 8px; cursor: pointer; transition: all 0.3s;">
                            20:30
                        </button>
                        <button type="button" onclick="setHora('21:00')" 
                                style="background: white; border: 2px solid #e0e0e0; padding: 0.75rem; border-radius: 8px; cursor: pointer; transition: all 0.3s;">
                            21:00
                        </button>
                        <button type="button" onclick="setHora('21:30')" 
                                style="background: white; border: 2px solid #e0e0e0; padding: 0.75rem; border-radius: 8px; cursor: pointer; transition: all 0.3s;">
                            21:30
                        </button>
                        <button type="button" onclick="setHora('22:00')" 
                                style="background: white; border: 2px solid #e0e0e0; padding: 0.75rem; border-radius: 8px; cursor: pointer; transition: all 0.3s;">
                            22:00
                        </button>
                    </div>
                </div>

                <!-- BOTONES -->
                <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                    <button type="submit" class="btn btn-primary btn-lg" style="flex: 1; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                        &#10133; Agregar Horario
                    </button>
                    <a asp-page="Index" asp-route-restauranteId="@Model.RestauranteId" class="btn btn-secondary btn-lg" style="flex: 1;">
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function setHora(hora) {
            document.getElementById('Input_Hora').value = hora;
        }
    </script>
}
