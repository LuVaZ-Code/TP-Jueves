<style>
/* AIRBNB DELETE PAGE STYLES */
.delete-page-modern {
    min-height: 100vh;
    background: linear-gradient(135deg, #FEF2F2 0%, #FFFFFF 100%);
    padding: 60px 24px 80px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.delete-container {
    max-width: 600px;
    width: 100%;
    text-align: center;
}

.warning-icon-large {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 100px;
    height: 100px;
    background: linear-gradient(135deg, #DC2626 0%, #991B1B 100%);
    border-radius: 50%;
    margin-bottom: 32px;
    box-shadow: 0 10px 40px rgba(220, 38, 38, 0.3);
    animation: pulse-warning 2s infinite;
}

@@keyframes pulse-warning {
    0%, 100% {
        box-shadow: 0 10px 40px rgba(220, 38, 38, 0.3);
    }
    50% {
        box-shadow: 0 10px 60px rgba(220, 38, 38, 0.5);
    }
}

.warning-icon-large svg {
    width: 50px;
    height: 50px;
    stroke: white;
}

.delete-title {
    font-size: 36px;
    font-weight: 700;
    color: #DC2626;
    margin: 0 0 12px;
    letter-spacing: -0.5px;
}

.delete-subtitle {
    font-size: 18px;
    color: var(--airbnb-gray);
    margin: 0 0 40px;
}

.restaurant-preview-card {
    background: white;
    border: 2px solid #FCA5A5;
    border-radius: 16px;
    padding: 32px;
    margin-bottom: 32px;
    display: flex;
    align-items: center;
    gap: 24px;
    text-align: left;
}

.preview-icon {
    font-size: 60px;
    flex-shrink: 0;
}

.preview-info {
    flex: 1;
}

.preview-name {
    font-size: 24px;
    font-weight: 600;
    color: var(--airbnb-black);
    margin: 0 0 16px;
}

.preview-details {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.detail-item {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    color: var(--airbnb-gray);
}

.detail-item svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
}

.consequences-box {
    background: white;
    border: 2px solid #FECACA;
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 32px;
    text-align: left;
}

.consequences-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
    color: #991B1B;
}

.consequences-header svg {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
}

.consequences-header strong {
    font-size: 16px;
}

.consequences-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.consequences-list li {
    padding: 10px 0 10px 32px;
    position: relative;
    color: #7C2D12;
    font-size: 14px;
    line-height: 1.6;
}

.consequences-list li::before {
    content: "‚úï";
    position: absolute;
    left: 0;
    color: #DC2626;
    font-weight: 700;
    font-size: 16px;
}

.consequences-list li:not(:last-child) {
    border-bottom: 1px solid #FEE2E2;
}

.delete-actions {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.btn-cancel-delete {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 14px 28px;
    background: white;
    color: var(--airbnb-black);
    border: 2px solid var(--airbnb-light-gray);
    border-radius: 8px;
    font-weight: 600;
    font-size: 16px;
    text-decoration: none;
    transition: var(--transition);
    cursor: pointer;
}

.btn-cancel-delete:hover {
    background: var(--airbnb-lighter-gray);
    border-color: var(--airbnb-black);
    color: var(--airbnb-black);
}

.btn-cancel-delete svg {
    width: 20px;
    height: 20px;
}

.btn-confirm-delete {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 14px 28px;
    background: #DC2626;
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 16px;
    cursor: pointer;
    transition: var(--transition);
}

.btn-confirm-delete:hover {
    background: #991B1B;
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(220, 38, 38, 0.3);
}

.btn-confirm-delete svg {
    width: 20px;
    height: 20px;
}

/* RESPONSIVE */
@@media (max-width: 768px) {
    .delete-page-modern {
        padding: 40px 16px 60px;
    }
    
    .restaurant-preview-card {
        flex-direction: column;
        text-align: center;
    }
    
    .preview-details {
        align-items: center;
    }
}
</style>
