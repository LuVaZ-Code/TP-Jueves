@page
@model TP_Jueves.Pages.Restaurants.IndexModel
@{
    ViewData["Title"] = "Mis Restaurantes - Restaurancito";
}

<!-- AIRBNB RESTAURANTS INDEX -->
<div class="restaurants-index-page">
    <div class="restaurants-container">
        
        <!-- HEADER -->
        <div class="page-header-modern">
            <div>
                <h1 class="page-title-modern">Mis Restaurantes</h1>
                <p class="page-subtitle-modern">Gestiona tus restaurantes y comienza a recibir reservas</p>
            </div>
            <a asp-page="Create" class="btn-create-modern">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Crear restaurante
            </a>
        </div>

        @if (Model.Restaurantes.Any())
        {
            <!-- RESTAURANTS GRID -->
            <div class="restaurants-grid">
                @foreach (var restaurante in Model.Restaurantes)
                {
                    var estadoColor = restaurante.Estado switch
                    {
                        TP_Jueves.Models.EstadoRestaurante.Activo => "#10B981",
                        TP_Jueves.Models.EstadoRestaurante.Pausado => "#F59E0B",
                        TP_Jueves.Models.EstadoRestaurante.EnConfiguracion => "#3B82F6",
                        _ => "#6B7280"
                    };

                    <div class="restaurant-card-owner">
                        <!-- STATUS BADGE -->
                        <div class="status-badge" style="background: @estadoColor;">
                            <span>@restaurante.Estado</span>
                            @if (!restaurante.ConfiguracionCompletada)
                            {
                                <span class="progress-pill">@restaurante.PorcentajeConfiguracion% configurado</span>
                            }
                        </div>

                        <!-- CONTENT -->
                        <div class="card-content-owner">
                            <h3 class="restaurant-name-owner">@restaurante.Nombre</h3>
                            <p class="restaurant-description">
                                @(string.IsNullOrEmpty(restaurante.Descripcion) ? "Sin descripci√≥n" : restaurante.Descripcion)
                            </p>

                            <div class="restaurant-info-box">
                                <div class="info-row">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                        <circle cx="12" cy="10" r="3"></circle>
                                    </svg>
                                    <span>@restaurante.Direccion</span>
                                </div>
                                <div class="info-row">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                                    </svg>
                                    <span>@restaurante.Telefono</span>
                                </div>
                            </div>

                            <!-- PRIMARY ACTION -->
                            @if (!restaurante.ConfiguracionCompletada)
                            {
                                <a asp-page="Setup/Wizard" asp-route-id="@restaurante.Id" asp-route-step="2" class="btn-primary-action">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="9 11 12 14 22 4"></polyline>
                                        <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
                                    </svg>
                                    Completar configuraci√≥n
                                </a>
                            }
                            else
                            {
                                <a asp-page="Dashboard" asp-route-id="@restaurante.Id" class="btn-primary-action">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                        <line x1="3" y1="9" x2="21" y2="9"></line>
                                        <line x1="9" y1="21" x2="9" y2="9"></line>
                                    </svg>
                                    Ver dashboard
                                </a>
                            }

                            <!-- SECONDARY ACTIONS -->
                            <div class="action-buttons-grid">
                                <a asp-page="Edit" asp-route-id="@restaurante.Id" class="btn-secondary-action">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                    </svg>
                                    Editar
                                </a>
                                <a asp-page="Mesas/Index" asp-route-restauranteId="@restaurante.Id" class="btn-secondary-action">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="8" width="18" height="12" rx="2"></rect>
                                        <path d="M3 8V6a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v2"></path>
                                    </svg>
                                    Mesas
                                </a>
                                <a asp-page="Delete" asp-route-id="@restaurante.Id" class="btn-delete-action">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="3 6 5 6 21 6"></polyline>
                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                    </svg>
                                    Eliminar
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- EMPTY STATE -->
            <div class="empty-state-modern">
                <div class="empty-icon">üçΩÔ∏è</div>
                <h2 class="empty-title">¬°Comienza tu negocio!</h2>
                <p class="empty-text">No tienes restaurantes todav√≠a. Crea tu primer restaurante y comienza a recibir reservas de tus clientes.</p>
                <a asp-page="Create" class="btn-empty-state">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                    Crear mi primer restaurante
                </a>
            </div>
        }

    </div>
</div>

<style>
/* AIRBNB RESTAURANTS INDEX STYLES */
.restaurants-index-page {
    padding: 32px 0 80px;
    background: white;
}

.restaurants-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 24px;
}

.page-header-modern {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 40px;
}

.page-title-modern {
    font-size: 32px;
    font-weight: 700;
    color: var(--airbnb-black);
    margin: 0 0 8px;
    letter-spacing: -0.5px;
}

.page-subtitle-modern {
    font-size: 16px;
    color: var(--airbnb-gray);
    margin: 0;
}

.btn-create-modern {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: var(--airbnb-red);
    color: white;
    border-radius: 8px;
    font-weight: 600;
    font-size: 14px;
    text-decoration: none;
    transition: var(--transition);
    white-space: nowrap;
}

.btn-create-modern:hover {
    background: var(--airbnb-red-dark);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    color: white;
}

.btn-create-modern svg {
    width: 18px;
    height: 18px;
}

/* GRID */
.restaurants-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
    gap: 24px;
}

.restaurant-card-owner {
    background: white;
    border: 1px solid var(--airbnb-light-gray);
    border-radius: var(--border-radius);
    overflow: hidden;
    transition: var(--transition);
}

.restaurant-card-owner:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
}

.status-badge {
    padding: 12px 20px;
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 13px;
    font-weight: 600;
}

.progress-pill {
    background: rgba(255, 255, 255, 0.3);
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 12px;
}

.card-content-owner {
    padding: 24px;
}

.restaurant-name-owner {
    font-size: 20px;
    font-weight: 600;
    color: var(--airbnb-black);
    margin: 0 0 12px;
}

.restaurant-description {
    font-size: 14px;
    color: var(--airbnb-gray);
    line-height: 1.6;
    margin: 0 0 16px;
    min-height: 44px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.restaurant-info-box {
    background: var(--airbnb-lighter-gray);
    padding: 16px;
    border-radius: 8px;
    margin-bottom: 16px;
}

.info-row {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    color: var(--airbnb-gray);
}

.info-row:not(:last-child) {
    margin-bottom: 10px;
}

.info-row svg {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
}

.btn-primary-action {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    width: 100%;
    padding: 12px;
    background: var(--airbnb-red);
    color: white;
    border-radius: 8px;
    font-weight: 600;
    font-size: 14px;
    text-decoration: none;
    margin-bottom: 12px;
    transition: var(--transition);
}

.btn-primary-action:hover {
    background: var(--airbnb-red-dark);
    color: white;
}

.btn-primary-action svg {
    width: 18px;
    height: 18px;
}

.action-buttons-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 8px;
}

.btn-secondary-action,
.btn-delete-action {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    padding: 10px 8px;
    background: white;
    color: var(--airbnb-black);
    border: 1px solid var(--airbnb-light-gray);
    border-radius: 8px;
    font-weight: 500;
    font-size: 13px;
    text-decoration: none;
    transition: var(--transition);
}

.btn-secondary-action:hover {
    background: var(--airbnb-lighter-gray);
    border-color: var(--airbnb-black);
    color: var(--airbnb-black);
}

.btn-delete-action {
    color: #DC2626;
    border-color: #FCA5A5;
}

.btn-delete-action:hover {
    background: #FEE2E2;
    border-color: #DC2626;
    color: #DC2626;
}

.btn-secondary-action svg,
.btn-delete-action svg {
    width: 16px;
    height: 16px;
}

/* EMPTY STATE */
.empty-state-modern {
    text-align: center;
    padding: 80px 24px;
}

.empty-icon {
    font-size: 80px;
    margin-bottom: 24px;
}

.empty-title {
    font-size: 28px;
    font-weight: 600;
    color: var(--airbnb-black);
    margin: 0 0 16px;
}

.empty-text {
    font-size: 16px;
    color: var(--airbnb-gray);
    line-height: 1.6;
    max-width: 500px;
    margin: 0 auto 32px;
}

.btn-empty-state {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 28px;
    background: var(--airbnb-red);
    color: white;
    border-radius: 8px;
    font-weight: 600;
    font-size: 16px;
    text-decoration: none;
    transition: var(--transition);
}

.btn-empty-state:hover {
    background: var(--airbnb-red-dark);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    color: white;
}

.btn-empty-state svg {
    width: 20px;
    height: 20px;
}

/* RESPONSIVE */
@@media (max-width: 768px) {
    .page-header-modern {
        flex-direction: column;
        gap: 16px;
    }
    
    .btn-create-modern {
        width: 100%;
        justify-content: center;
    }
    
    .restaurants-grid {
        grid-template-columns: 1fr;
    }
    
    .action-buttons-grid {
        grid-template-columns: 1fr;
    }
}
</style>
