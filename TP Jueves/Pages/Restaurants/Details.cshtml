@page
@model TP_Jueves.Pages.Restaurants.DetailsModel
@{
    ViewData["Title"] = Model.Restaurante?.Nombre ?? "Restaurante";
}

<!-- HERO SECTION -->
<section class="hero" style="margin-bottom: 2rem; background: linear-gradient(135deg, #e74c3c 0%, #ec7063 100%);">
    <h1>@Model.Restaurante?.Nombre</h1>
    <p>@Model.Restaurante?.Direccion</p>
</section>

<div style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem; margin-bottom: 2rem;">
    <!-- INFORMACION PRINCIPAL -->
    <div class="card" style="box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
        <div class="card-body">
            <h3 style="color: #2c3e50; margin-bottom: 1rem; font-weight: 700;">Sobre el Restaurante</h3>
            
            <p style="color: #7f8c8d; line-height: 1.6; margin-bottom: 1.5rem; font-size: 1rem;">
                @Model.Restaurante?.Descripcion
            </p>

            <div style="background: #f9f9f9; padding: 1.5rem; border-radius: 8px; margin-bottom: 1.5rem; border-left: 4px solid #e74c3c;">
                <h4 style="color: #2c3e50; margin-bottom: 1rem; font-weight: 600;">&#128222; Contacto</h4>
                
                <div style="margin-bottom: 1rem;">
                    <p style="margin: 0.5rem 0; color: #7f8c8d; font-size: 0.9rem;">
                        <strong>Tel&eacute;fono</strong>
                    </p>
                    <p style="margin: 0; font-size: 1.1rem;">
                        <a href="tel:@Model.Restaurante?.Telefono" style="color: #e74c3c; text-decoration: none; font-weight: 600;">
                            @Model.Restaurante?.Telefono
                        </a>
                    </p>
                </div>

                <div>
                    <p style="margin: 0.5rem 0; color: #7f8c8d; font-size: 0.9rem;">
                        <strong>Email</strong>
                    </p>
                    <p style="margin: 0; font-size: 1.1rem;">
                        <a href="mailto:@Model.Restaurante?.Email" style="color: #e74c3c; text-decoration: none; font-weight: 600;">
                            @Model.Restaurante?.Email
                        </a>
                    </p>
                </div>
            </div>

            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                @if (User.IsInRole("Cliente"))
                {
                    <a asp-page="/Reserve" asp-route-restauranteId="@Model.Restaurante?.Id" class="btn btn-primary btn-lg" style="width: 100%; border-radius: 8px;">
                        &#128197; Hacer Reserva
                    </a>
                }
                else
                {
                    <div class="alert alert-info mb-0" style="border-radius: 8px;">
                        <p style="margin: 0;">Solo los clientes pueden hacer reservas.</p>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning mb-0" style="border-radius: 8px;">
                    <p style="margin: 0;">
                        Debes 
                        <a asp-page="/Account/Login" style="font-weight: 600; color: #e74c3c;">iniciar sesi&oacute;n</a>
                        para hacer una reserva.
                    </p>
                </div>
            }
        </div>
    </div>

    <!-- PANEL LATERAL -->
    <div>
        <!-- MESAS DISPONIBLES -->
        <div class="card" style="margin-bottom: 2rem; box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
            <div class="card-body">
                <h4 style="color: #2c3e50; margin-bottom: 1rem; font-weight: 700;">&#128186; Mesas</h4>
                
                @if (Model.Restaurante?.Mesas?.Any() ?? false)
                {
                    <div style="display: flex; flex-direction: column; gap: 0.6rem;">
                        @foreach (var mesa in Model.Restaurante.Mesas.OrderBy(m => m.Capacidad))
                        {
                            <div style="background: linear-gradient(135deg, #3498db 0%, #2980b9 100%); color: white; padding: 0.8rem; border-radius: 6px; text-align: center; font-size: 0.9rem;">
                                <p style="margin: 0; opacity: 0.9;">Mesa @mesa.Id</p>
                                <p style="margin: 0.25rem 0 0; font-weight: 700;">@mesa.Capacidad personas</p>
                            </div>
                        }
                    </div>

                    <p style="margin-top: 1rem; font-size: 0.85rem; color: #7f8c8d;">
                        <strong>Total:</strong> @(Model.Restaurante.Mesas.Count) mesa(s) disponibles
                    </p>
                }
                else
                {
                    <div class="alert alert-warning mb-0" style="border-radius: 6px; font-size: 0.9rem;">
                        <p style="margin: 0;">Sin mesas disponibles</p>
                    </div>
                }
            </div>
        </div>

        <!-- INFORMACION ADICIONAL -->
        <div class="card" style="box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
            <div class="card-body">
                <h4 style="color: #2c3e50; margin-bottom: 1rem; font-weight: 700;">&#8505; Informaci&oacute;n</h4>
                
                <div style="background: #f0f4f8; padding: 1rem; border-radius: 6px;">
                    <p style="margin: 0; color: #7f8c8d; font-size: 0.9rem;">
                        <strong>&#10003; Ubicaci&oacute;n confirmada</strong>
                    </p>
                    <p style="margin: 0.5rem 0 0; color: #7f8c8d; font-size: 0.9rem;">
                        <strong>&#10003; Contacto verificado</strong>
                    </p>
                    <p style="margin: 0.5rem 0 0; color: #7f8c8d; font-size: 0.9rem;">
                        <strong>&#10003; Reservas disponibles</strong>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- OPINIONES - PROXIMAMENTE -->
<div class="card" style="margin-bottom: 2rem; box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
    <div class="card-body">
        <h3 style="color: #2c3e50; margin-bottom: 1rem; font-weight: 700;">&#11088; Opiniones</h3>
        <p style="color: #7f8c8d; margin: 0;">
            <em>Pr&oacute;ximamente: Sistema de valoraciones y opiniones de clientes</em>
        </p>
    </div>
</div>

<!-- BOTONES FINALES -->
<div style="display: flex; gap: 1rem; margin-top: 2rem; flex-wrap: wrap;">
    <a asp-page="Browse" class="btn btn-secondary btn-lg" style="flex: 1; min-width: 150px; border-radius: 8px;">
        &larr; Volver a Restaurantes
    </a>
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        @if (User.IsInRole("Cliente"))
        {
            <a asp-page="/Reserve" asp-route-restauranteId="@Model.Restaurante?.Id" class="btn btn-success btn-lg" style="flex: 1; min-width: 150px; border-radius: 8px;">
                &#128197; Reservar
            </a>
        }
    }
</div>
