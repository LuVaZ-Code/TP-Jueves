@page
@model TP_Jueves.Pages.Restaurants.DetailsModel
@{
    ViewData["Title"] = Model.Restaurante?.Nombre ?? "Restaurante";
}

<!-- HERO SECTION -->
<section class="hero" style="margin-bottom: 2rem;">
    <h1>@Model.Restaurante?.Nombre</h1>
    <p>@Model.Restaurante?.Direccion</p>
</section>

<div style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem; margin-bottom: 2rem;">
    <!-- INFORMACION PRINCIPAL -->
    <div class="card">
        <div class="card-body">
            <h3 style="color: #2c3e50; margin-bottom: 1rem; font-weight: 600;">Sobre el Restaurante</h3>
            
            <p style="color: #7f8c8d; line-height: 1.6; margin-bottom: 1.5rem;">
                @Model.Restaurante?.Descripcion
            </p>

            <div style="background: #f9f9f9; padding: 1.5rem; border-radius: 8px; margin-bottom: 1.5rem;">
                <h4 style="color: #2c3e50; margin-bottom: 1rem; font-weight: 600;">Informacion de Contacto</h4>
                
                <div style="margin-bottom: 1rem;">
                    <p style="margin: 0.5rem 0; color: #7f8c8d;">
                        <strong>Telefono:</strong>
                    </p>
                    <p style="margin: 0; font-size: 1.1rem;">
                        <a href="tel:@Model.Restaurante?.Telefono" style="color: #e74c3c; text-decoration: none;">
                            @Model.Restaurante?.Telefono
                        </a>
                    </p>
                </div>

                <div>
                    <p style="margin: 0.5rem 0; color: #7f8c8d;">
                        <strong>Email:</strong>
                    </p>
                    <p style="margin: 0; font-size: 1.1rem;">
                        <a href="mailto:@Model.Restaurante?.Email" style="color: #e74c3c; text-decoration: none;">
                            @Model.Restaurante?.Email
                        </a>
                    </p>
                </div>
            </div>

            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <a asp-page="/Reserve" asp-route-restauranteId="@Model.Restaurante?.Id" class="btn btn-primary btn-lg w-100">
                    <i class="fas fa-calendar-plus"></i> Hacer Reserva
                </a>
            }
            else
            {
                <div class="alert alert-info mb-0">
                    <p style="margin: 0;">Debes <a asp-page="/Account/Login" style="font-weight: 600;">iniciar sesion</a> para hacer una reserva.</p>
                </div>
            }
        </div>
    </div>

    <!-- MESAS DISPONIBLES -->
    <div class="card">
        <div class="card-body">
            <h3 style="color: #2c3e50; margin-bottom: 1rem; font-weight: 600;">Mesas Disponibles</h3>
            
            @if (Model.Restaurante?.Mesas?.Any() ?? false)
            {
                <div style="display: flex; flex-direction: column; gap: 0.8rem;">
                    @foreach (var mesa in Model.Restaurante.Mesas.OrderBy(m => m.Capacidad))
                    {
                        <div style="background: linear-gradient(135deg, #3498db 0%, #2980b9 100%); color: white; padding: 1rem; border-radius: 8px; text-align: center;">
                            <p style="margin: 0; font-size: 0.9rem; opacity: 0.9;">Mesa @mesa.Id</p>
                            <p style="margin: 0.5rem 0 0; font-size: 1.3rem; font-weight: 700;">
                                @mesa.Capacidad @(mesa.Capacidad == 1 ? "Persona" : "Personas")
                            </p>
                        </div>
                    }
                </div>

                <p style="margin-top: 1rem; font-size: 0.9rem; color: #7f8c8d;">
                    <strong>Total:</strong> @(Model.Restaurante.Mesas.Count) mesa(s)
                </p>
            }
            else
            {
                <div class="alert alert-warning mb-0">
                    <p style="margin: 0;">No hay mesas disponibles en este restaurante aun.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- RESENAS / PROXIMAMENTE -->
<div class="card" style="margin-bottom: 2rem;">
    <div class="card-body">
        <h3 style="color: #2c3e50; margin-bottom: 1rem; font-weight: 600;">Resenas</h3>
        <p style="color: #7f8c8d; margin: 0;">
            <em>Proximamente: Sistema de resenas y calificaciones</em>
        </p>
    </div>
</div>

<div style="text-align: center;">
    <a asp-page="Browse" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver a Restaurantes
    </a>
</div>
