@page
@model TP_Jueves.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Iniciar sesi칩n - Restaurancito";
}

<!-- AIRBNB LOGIN PAGE -->
<div class="auth-page">
    <div class="auth-container-modern">
        
        <!-- HEADER -->
        <div class="auth-header">
            <a asp-page="/Index" class="auth-logo">
                <span class="logo-icon">游꼾</span>
                <span class="logo-text">Restaurancito</span>
            </a>
        </div>

        <!-- CARD -->
        <div class="auth-card-modern">
            <div class="auth-card-content">
                <h1 class="auth-title">Te damos la bienvenida a Restaurancito</h1>
                
                @if (ViewData.ModelState[""]?.Errors.Any() ?? false)
                {
                    <div class="error-banner">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="12" y1="8" x2="12" y2="12" stroke="white" stroke-width="2"></line>
                            <line x1="12" y1="16" x2="12.01" y2="16" stroke="white" stroke-width="2"></line>
                        </svg>
                        <div>
                            @foreach (var error in ViewData.ModelState[""].Errors)
                            {
                                <p>@error.ErrorMessage</p>
                            }
                        </div>
                    </div>
                }

                <form method="post" class="auth-form">
                    <!-- EMAIL -->
                    <div class="input-group-modern">
                        <label asp-for="Input.Email" class="input-label-modern">Correo electr칩nico</label>
                        <input asp-for="Input.Email" 
                               class="input-modern" 
                               type="email"
                               placeholder="tu@ejemplo.com" 
                               autocomplete="email" />
                        <span asp-validation-for="Input.Email" class="validation-error"></span>
                    </div>

                    <!-- PASSWORD -->
                    <div class="input-group-modern">
                        <label asp-for="Input.Password" class="input-label-modern">Contrase침a</label>
                        <input asp-for="Input.Password" 
                               class="input-modern" 
                               type="password"
                               placeholder="Ingresa tu contrase침a" 
                               autocomplete="current-password" />
                        <span asp-validation-for="Input.Password" class="validation-error"></span>
                    </div>

                    <!-- REMEMBER ME -->
                    <div class="checkbox-modern">
                        <input asp-for="Input.RememberMe" 
                               type="checkbox" 
                               id="rememberMe" 
                               class="checkbox-input" />
                        <label for="rememberMe" class="checkbox-label">
                            Recordarme
                        </label>
                    </div>

                    <!-- SUBMIT BUTTON -->
                    <button type="submit" class="btn-auth-primary">
                        Continuar
                    </button>
                </form>

                <!-- DIVIDER -->
                <div class="auth-divider">
                    <span>o</span>
                </div>

                <!-- LINK TO REGISTER -->
                <div class="auth-footer-link">
                    <p>쯅o tienes una cuenta? <a asp-page="Register" class="link-primary">Reg칤strate</a></p>
                </div>
            </div>
        </div>

        <!-- FOOTER -->
        <div class="auth-footer">
            <p>&copy; 2025 Restaurancito. Todos los derechos reservados.</p>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
