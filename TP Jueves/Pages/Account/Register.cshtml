@model TP_Jueves.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registro - Restaurancito";
}

<!-- AIRBNB REGISTER PAGE -->
<div class="auth-page">
    <div class="auth-container-modern">
        
        <!-- HEADER -->
        <div class="auth-header">
            <a asp-page="/Index" class="auth-logo">
                <span class="logo-icon">üç¥</span>
                <span class="logo-text">Restaurancito</span>
            </a>
        </div>

        <!-- CARD -->
        <div class="auth-card-modern">
            <div class="auth-card-content">
                <h1 class="auth-title">√önete a Restaurancito</h1>
                <p class="auth-subtitle">Crea tu cuenta y comienza a disfrutar</p>
                
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey(string.Empty))
                {
                    <div class="error-banner">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="12" y1="8" x2="12" y2="12" stroke="white" stroke-width="2"></line>
                            <line x1="12" y1="16" x2="12.01" y2="16" stroke="white" stroke-width="2"></line>
                        </svg>
                        <div>
                            @foreach (var error in ViewData.ModelState[string.Empty].Errors)
                            {
                                <p>@Html.Raw(error.ErrorMessage)</p>
                            }
                        </div>
                    </div>
                }

                <form method="post" class="auth-form">
                    <!-- NAME ROW -->
                    <div class="input-row">
                        <div class="input-group-modern">
                            <label asp-for="Input.Nombre" class="input-label-modern">Nombre</label>
                            <input asp-for="Input.Nombre" 
                                   class="input-modern" 
                                   placeholder="Juan" 
                                   autocomplete="given-name" />
                            <span asp-validation-for="Input.Nombre" class="validation-error"></span>
                        </div>

                        <div class="input-group-modern">
                            <label asp-for="Input.Apellido" class="input-label-modern">Apellido</label>
                            <input asp-for="Input.Apellido" 
                                   class="input-modern" 
                                   placeholder="P√©rez" 
                                   autocomplete="family-name" />
                            <span asp-validation-for="Input.Apellido" class="validation-error"></span>
                        </div>
                    </div>

                    <!-- EMAIL -->
                    <div class="input-group-modern">
                        <label asp-for="Input.Email" class="input-label-modern">Correo electr√≥nico</label>
                        <input asp-for="Input.Email" 
                               class="input-modern" 
                               type="email"
                               placeholder="tu@ejemplo.com" 
                               autocomplete="email" />
                        <span asp-validation-for="Input.Email" class="validation-error"></span>
                    </div>

                    <!-- ROLE -->
                    <div class="input-group-modern">
                        <label asp-for="Input.Rol" class="input-label-modern">Tipo de cuenta</label>
                        <select asp-for="Input.Rol" class="select-modern">
                            <option value="Cliente">üçΩÔ∏è Cliente - Hacer reservas</option>
                            <option value="Restaurantero">üë®‚Äçüç≥ Restaurantero - Gestionar restaurante</option>
                        </select>
                        <span asp-validation-for="Input.Rol" class="validation-error"></span>
                        <small class="input-help">Puedes cambiar esto m√°s adelante</small>
                    </div>

                    <!-- PASSWORD -->
                    <div class="input-group-modern">
                        <label asp-for="Input.Password" class="input-label-modern">Contrase√±a</label>
                        <input asp-for="Input.Password" 
                               class="input-modern" 
                               type="password"
                               placeholder="M√≠nimo 6 caracteres" 
                               autocomplete="new-password" />
                        <span asp-validation-for="Input.Password" class="validation-error"></span>
                        <small class="input-help">Debe contener min√∫sculas y n√∫meros</small>
                    </div>

                    <!-- CONFIRM PASSWORD -->
                    <div class="input-group-modern">
                        <label asp-for="Input.ConfirmPassword" class="input-label-modern">Confirmar contrase√±a</label>
                        <input asp-for="Input.ConfirmPassword" 
                               class="input-modern" 
                               type="password"
                               placeholder="Repite tu contrase√±a" 
                               autocomplete="new-password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="validation-error"></span>
                    </div>

                    <!-- TERMS -->
                    <div class="terms-text">
                        Al continuar, acepto los <a href="#" class="link-primary">T√©rminos de servicio</a> y la <a href="#" class="link-primary">Pol√≠tica de privacidad</a> de Restaurancito.
                    </div>

                    <!-- SUBMIT BUTTON -->
                    <button type="submit" class="btn-auth-primary">
                        Crear cuenta
                    </button>
                </form>

                <!-- DIVIDER -->
                <div class="auth-divider">
                    <span>o</span>
                </div>

                <!-- LINK TO LOGIN -->
                <div class="auth-footer-link">
                    <p>¬øYa tienes una cuenta? <a asp-page="Login" class="link-primary">Inicia sesi√≥n</a></p>
                </div>
            </div>
        </div>

        <!-- FOOTER -->
        <div class="auth-footer">
            <p>&copy; 2025 Restaurancito. Todos los derechos reservados.</p>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
