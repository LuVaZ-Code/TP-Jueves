@page
@model TP_Jueves.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Crear Cuenta";
}

<div class="auth-container">
    <div class="auth-card">
        <!-- HEADER -->
        <div class="auth-card-header">
            <h2>Crear Cuenta</h2>
            <p style="margin: 0.5rem 0 0; font-size: 0.9rem; opacity: 0.9;">Unete a TP Jueves hoy</p>
        </div>

        <!-- BODY -->
        <div class="auth-card-body">
            <!-- MOSTRAR ERRORES GENERALES -->
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey(string.Empty))
            {
                <div style="background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%); color: white; padding: 1.5rem; border-radius: 12px; margin-bottom: 1.5rem; animation: slideIn 0.3s ease;">
                    <div style="display: flex; align-items: start; gap: 1rem;">
                        <div style="font-size: 1.5rem;">&#9888;</div>
                        <div style="flex: 1;">
                            <h4 style="margin: 0 0 0.5rem 0; font-weight: 700; font-size: 1.1rem;">Error al crear la cuenta</h4>
                            @foreach (var error in ViewData.ModelState[string.Empty].Errors)
                            {
                                <p style="margin: 0.25rem 0; font-size: 0.95rem;">&#8226; @Html.Raw(error.ErrorMessage)</p>
                            }
                        </div>
                    </div>
                </div>
            }

            <form method="post" novalidate>
                <!-- NOMBRE -->
                <div class="form-group">
                    <label asp-for="Input.Nombre" class="form-label">
                        Nombre
                    </label>
                    <input asp-for="Input.Nombre" class="form-control" placeholder="Juan" />
                    <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                </div>

                <!-- APELLIDO -->
                <div class="form-group">
                    <label asp-for="Input.Apellido" class="form-label">
                        Apellido
                    </label>
                    <input asp-for="Input.Apellido" class="form-control" placeholder="Perez" />
                    <span asp-validation-for="Input.Apellido" class="text-danger"></span>
                </div>

                <!-- EMAIL -->
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label">
                        Correo Electr&oacute;nico
                    </label>
                    <input asp-for="Input.Email" class="form-control" placeholder="tu@ejemplo.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- ROL -->
                <div class="form-group">
                    <label asp-for="Input.Rol" class="form-label">
                        Tipo de Cuenta
                    </label>
                    <select asp-for="Input.Rol" class="form-control">
                        <option value="Cliente">Cliente - Hacer reservas</option>
                        <option value="Restaurantero">Restaurantero - Gestionar restaurante</option>
                    </select>
                    <span asp-validation-for="Input.Rol" class="text-danger"></span>
                    <small class="form-text" style="color: #7f8c8d;">
                        Puedes cambiar esto m&aacute;s adelante si lo deseas.
                    </small>
                </div>

                <!-- CONTRASENA -->
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label">
                        Contrase&ntilde;a
                    </label>
                    <input asp-for="Input.Password" class="form-control" placeholder="M&iacute;nimo 6 caracteres" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <small class="form-text">
                        Debe contener: min&uacute;sculas y n&uacute;meros
                    </small>
                </div>

                <!-- CONFIRMAR CONTRASENA -->
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="form-label">
                        Confirmar Contrase&ntilde;a
                    </label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Repetir contrase&ntilde;a" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- BOTON REGISTRAR -->
                <button type="submit" class="btn btn-primary w-100 btn-lg" style="margin-top: 1.5rem;">
                    Crear Cuenta
                </button>
            </form>

            <!-- LINK A LOGIN -->
            <div class="auth-link">
                &iquest;Tienes cuenta? <a asp-page="Login">Ingresa aqu&iacute;</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <style>
        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}
