@page
@model TP_Jueves.Pages.ReserveModel
@{
    ViewData["Title"] = "Hacer una Reserva";
    var todayMin = DateTime.Today.ToString("yyyy-MM-dd");
    var maxDate = DateTime.Today.AddDays(30).ToString("yyyy-MM-dd");
}

<!-- HERO SECTION -->
<section class="hero" style="margin-bottom: 2rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <h1>?? Reservar Mesa</h1>
    @if (Model.RestauranteSeleccionado != null)
    {
        <p>@Model.RestauranteSeleccionado.Nombre</p>
    }
    else
    {
        <p>Selecciona tu restaurante favorito</p>
    }
</section>

<!-- RESTAURANTE INFO -->
@if (Model.RestauranteSeleccionado != null)
{
    <div style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white; padding: 2rem; border-radius: 16px; margin-bottom: 2rem; box-shadow: 0 10px 40px rgba(0,0,0,0.15);">
        <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
            <div style="background: rgba(255,255,255,0.2); width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 2rem;">
                ???
            </div>
            <div style="flex: 1;">
                <h2 style="margin: 0; font-weight: 800; font-size: 1.8rem;">@Model.RestauranteSeleccionado.Nombre</h2>
                <p style="margin: 0.5rem 0 0; opacity: 0.95; font-size: 1.1rem;">?? @Model.RestauranteSeleccionado.Direccion</p>
            </div>
        </div>
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-top: 1.5rem;">
            <div style="background: rgba(255,255,255,0.15); padding: 1rem; border-radius: 8px;">
                <p style="margin: 0; opacity: 0.9; font-size: 0.9rem;">Teléfono</p>
                <p style="margin: 0.25rem 0 0; font-weight: 600; font-size: 1.1rem;">@Model.RestauranteSeleccionado.Telefono</p>
            </div>
            <div style="background: rgba(255,255,255,0.15); padding: 1rem; border-radius: 8px;">
                <p style="margin: 0; opacity: 0.9; font-size: 0.9rem;">Email</p>
                <p style="margin: 0.25rem 0 0; font-weight: 600; font-size: 1.1rem;">@Model.RestauranteSeleccionado.Email</p>
            </div>
        </div>
    </div>
}

<!-- SUCCESS MESSAGE -->
@if (Model.IsSuccess && Model.ReservaId.HasValue)
{
    <div style="max-width: 800px; margin: 0 auto 2rem; animation: slideInDown 0.5s ease;">
        <div style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white; padding: 2.5rem; border-radius: 16px; box-shadow: 0 15px 50px rgba(17, 153, 142, 0.3);">
            <div style="text-align: center; margin-bottom: 2rem;">
                <div style="width: 80px; height: 80px; background: rgba(255,255,255,0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; font-size: 3rem;">
                    ?
                </div>
                <h2 style="margin: 0; font-weight: 800; font-size: 2rem;">¡Reserva Confirmada!</h2>
                <p style="margin: 0.5rem 0 0; opacity: 0.95; font-size: 1.1rem;">Tu mesa está reservada</p>
            </div>

            <div style="background: rgba(255,255,255,0.15); padding: 2rem; border-radius: 12px; margin-bottom: 2rem;">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                    <div>
                        <p style="margin: 0; opacity: 0.9; font-size: 0.9rem;">Restaurante</p>
                        <p style="margin: 0.25rem 0 0; font-weight: 700; font-size: 1.2rem;">@Model.RestauranteSeleccionado?.Nombre</p>
                    </div>
                    <div>
                        <p style="margin: 0; opacity: 0.9; font-size: 0.9rem;">Código de Reserva</p>
                        <p style="margin: 0.25rem 0 0; font-weight: 700; font-size: 1.2rem; font-family: monospace;">@Model.ReservaId.ToString().Substring(0, 8)</p>
                    </div>
                    <div>
                        <p style="margin: 0; opacity: 0.9; font-size: 0.9rem;">Fecha</p>
                        <p style="margin: 0.25rem 0 0; font-weight: 700; font-size: 1.2rem;">@Model.Fecha.ToString("dd/MM/yyyy")</p>
                    </div>
                    <div>
                        <p style="margin: 0; opacity: 0.9; font-size: 0.9rem;">Horario</p>
                        <p style="margin: 0.25rem 0 0; font-weight: 700; font-size: 1.2rem;">@Model.Horario</p>
                    </div>
                    <div>
                        <p style="margin: 0; opacity: 0.9; font-size: 0.9rem;">Comensales</p>
                        <p style="margin: 0.25rem 0 0; font-weight: 700; font-size: 1.2rem;">@Model.CantPersonas personas</p>
                    </div>
                    <div>
                        <p style="margin: 0; opacity: 0.9; font-size: 0.9rem;">Preferencia</p>
                        <p style="margin: 0.25rem 0 0; font-weight: 700; font-size: 1.2rem;">@Model.Dieta</p>
                    </div>
                </div>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 1rem;">
                <a asp-page="/Reservations/List" style="background: rgba(255,255,255,0.9); color: #11998e; padding: 1rem; border-radius: 8px; text-align: center; text-decoration: none; font-weight: 700; transition: all 0.3s;">
                    ?? Mis Reservas
                </a>
                <a asp-page="/Restaurants/Browse" style="background: rgba(255,255,255,0.9); color: #11998e; padding: 1rem; border-radius: 8px; text-align: center; text-decoration: none; font-weight: 700; transition: all 0.3s;">
                    ??? Explorar Más
                </a>
                <a asp-page="/Index" style="background: rgba(255,255,255,0.9); color: #11998e; padding: 1rem; border-radius: 8px; text-align: center; text-decoration: none; font-weight: 700; transition: all 0.3s;">
                    ?? Inicio
                </a>
            </div>
        </div>
    </div>
}
else
{
    <!-- RESERVATION FORM -->
    <div style="max-width: 900px; margin: 0 auto;">
        <div class="card" style="border: none; border-radius: 16px; box-shadow: 0 10px 40px rgba(0,0,0,0.1); overflow: hidden;">
            <!-- FORM HEADER -->
            <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 2rem; text-align: center;">
                <h3 style="margin: 0; font-weight: 800; font-size: 1.8rem;">Completa tu Reserva</h3>
                <p style="margin: 0.5rem 0 0; opacity: 0.95;">Estamos a un paso de confirmar tu mesa</p>
            </div>

            <div class="card-body" style="padding: 2.5rem;">
                @if (!string.IsNullOrEmpty(Model.Message) && !Model.IsSuccess)
                {
                    <div style="background: linear-gradient(135deg, #ffeaa7 0%, #fdcb6e 100%); color: #2d3436; padding: 1.5rem; border-radius: 12px; margin-bottom: 2rem; border-left: 4px solid #fdcb6e;">
                        <div style="display: flex; align-items: center; gap: 1rem;">
                            <span style="font-size: 2rem;">??</span>
                            <div style="flex: 1;">
                                <p style="margin: 0; font-weight: 700; font-size: 1.1rem;">@Model.Message</p>
                                @if (Model.Suggestions.Any())
                                {
                                    <p style="margin: 0.5rem 0 0; font-weight: 600;">Alternativas disponibles:</p>
                                    <div style="display: flex; flex-wrap: wrap; gap: 0.5rem; margin-top: 0.5rem;">
                                        @foreach (var sugg in Model.Suggestions.Take(5))
                                        {
                                            <span style="background: rgba(255,255,255,0.8); padding: 0.4rem 0.8rem; border-radius: 6px; font-size: 0.9rem; font-weight: 600;">
                                                @sugg.fecha.ToString("dd/MM") - @sugg.horario
                                            </span>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <form method="post" novalidate>
                    <!-- PERSONAL INFO -->
                    <div style="margin-bottom: 2.5rem;">
                        <h4 style="color: #2d3436; font-weight: 700; margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.5rem;">
                            <span style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; width: 32px; height: 32px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 0.9rem;">1</span>
                            Información Personal
                        </h4>
                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Dni" class="form-label">
                                    <span style="color: #e74c3c;">*</span> DNI
                                </label>
                                <input asp-for="Dni" type="tel" inputmode="numeric" pattern="\d{8}" maxlength="8" 
                                       class="form-control" placeholder="12345678"
                                       oninput="this.value = this.value.replace(/\D/g,'').slice(0,8);" />
                                <span asp-validation-for="Dni" class="text-danger"></span>
                                <small class="form-text">8 dígitos sin puntos</small>
                            </div>

                            <div class="form-group">
                                <label asp-for="CantPersonas" class="form-label">
                                    <span style="color: #e74c3c;">*</span> Comensales
                                </label>
                                <input asp-for="CantPersonas" type="number" min="1" max="20" class="form-control" />
                                <span asp-validation-for="CantPersonas" class="text-danger"></span>
                                <small class="form-text">1 a 20 personas</small>
                            </div>
                        </div>
                    </div>

                    <!-- DATE & TIME -->
                    <div style="margin-bottom: 2.5rem;">
                        <h4 style="color: #2d3436; font-weight: 700; margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.5rem;">
                            <span style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; width: 32px; height: 32px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 0.9rem;">2</span>
                            Fecha y Horario
                        </h4>
                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Fecha" class="form-label">
                                    <span style="color: #e74c3c;">*</span> Fecha
                                </label>
                                <input asp-for="Fecha" type="date" min="@todayMin" max="@maxDate" class="form-control" />
                                <span asp-validation-for="Fecha" class="text-danger"></span>
                                <small class="form-text">Próximos 30 días</small>
                            </div>

                            <div class="form-group">
                                <label asp-for="Horario" class="form-label">
                                    <span style="color: #e74c3c;">*</span> Horario
                                </label>
                                <select asp-for="Horario" class="form-control">
                                    @foreach (var h in Enum.GetValues(typeof(TP_Jueves.Models.Horario)).Cast<TP_Jueves.Models.Horario>())
                                    {
                                        <option value="@((int)h)">@h</option>
                                    }
                                </select>
                                <span asp-validation-for="Horario" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- PREFERENCES -->
                    <div style="margin-bottom: 2.5rem;">
                        <h4 style="color: #2d3436; font-weight: 700; margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.5rem;">
                            <span style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; width: 32px; height: 32px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 0.9rem;">3</span>
                            Preferencias
                        </h4>
                        <div class="form-group">
                            <label asp-for="Dieta" class="form-label">Preferencia Dietética</label>
                            <select asp-for="Dieta" class="form-control">
                                @foreach (var d in Enum.GetValues(typeof(TP_Jueves.Models.Dieta)).Cast<TP_Jueves.Models.Dieta>())
                                {
                                    <option value="@((int)d)">@d</option>
                                }
                            </select>
                        </div>
                    </div>

                    <!-- AVAILABLE SLOTS -->
                    @if (Model.HorariosDisponibles.Any())
                    {
                        <div style="margin-bottom: 2.5rem;">
                            <h4 style="color: #2d3436; font-weight: 700; margin-bottom: 1.5rem;">?? Horarios Disponibles</h4>
                            <div style="background: #f8f9fa; padding: 1.5rem; border-radius: 12px; max-height: 300px; overflow-y: auto;">
                                <div style="display: grid; gap: 0.75rem;">
                                    @foreach (var turno in Model.HorariosDisponibles.Take(10))
                                    {
                                        var bgColor = turno.EstaLleno ? "#e74c3c" : turno.CapacidadRestante <= 5 ? "#f39c12" : "#27ae60";
                                        var textColor = "white";
                                        <div style="background: @bgColor; color: @textColor; padding: 1rem; border-radius: 8px; display: flex; justify-content: space-between; align-items: center;">
                                            <div>
                                                <span style="font-weight: 700; font-size: 1.1rem;">@turno.Fecha.ToString("dd/MM/yyyy")</span>
                                                <span style="opacity: 0.9; margin-left: 1rem;">@turno.Horario</span>
                                            </div>
                                            <div style="text-align: right;">
                                                @if (turno.EstaLleno)
                                                {
                                                    <span style="font-weight: 700;">LLENO</span>
                                                }
                                                else
                                                {
                                                    <span style="font-weight: 700;">@turno.CapacidadRestante disponibles</span>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <!-- SUBMIT BUTTONS -->
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-top: 2rem;">
                        <a asp-page="/Restaurants/Browse" style="background: #95a5a6; color: white; padding: 1.2rem; border-radius: 12px; text-align: center; text-decoration: none; font-weight: 700; font-size: 1.1rem; transition: all 0.3s;">
                            ? Cancelar
                        </a>
                        <button type="submit" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 1.2rem; border-radius: 12px; border: none; font-weight: 700; font-size: 1.1rem; cursor: pointer; transition: all 0.3s;">
                            ? Confirmar Reserva
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<style>
    @@keyframes slideInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-label {
        font-weight: 700;
        color: #2d3436;
        margin-bottom: 0.5rem;
        font-size: 1rem;
    }

    .form-control {
        border-radius: 10px;
        border: 2px solid #e0e0e0;
        padding: 0.9rem;
        font-size: 1rem;
        transition: all 0.3s;
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        outline: none;
    }

    .form-text {
        color: #95a5a6;
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }

    @@media (max-width: 768px) {
        .form-row {
            grid-template-columns: 1fr;
        }
    }

    button[type="submit"]:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
    }

    a:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const form = document.querySelector('form');
            if (!form) return;

            form.addEventListener('submit', function (e) {
                const dniInput = document.querySelector('input[name="Dni"]');
                const fechaInput = document.querySelector('input[name="Fecha"]');
                
                if (dniInput) {
                    const dniVal = dniInput.value.trim();
                    if (!/^\d{8}$/.test(dniVal)) {
                        e.preventDefault();
                        dniInput.focus();
                        alert('DNI debe contener exactamente 8 dígitos');
                        return false;
                    }
                }

                if (fechaInput) {
                    const fechaVal = fechaInput.value;
                    const today = new Date();
                    today.setHours(0,0,0,0);
                    const sel = fechaVal ? new Date(fechaVal) : null;
                    if (!sel || sel < today) {
                        e.preventDefault();
                        fechaInput.focus();
                        alert('Selecciona una fecha válida');
                        return false;
                    }
                }

                return true;
            });
        })();
    </script>
}
